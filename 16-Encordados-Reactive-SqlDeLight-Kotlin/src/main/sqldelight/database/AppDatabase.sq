insertTenista:
INSERT INTO Tenista (id, nombre, ranking, fecha_nacimiento, anno_profesional, altura, peso, ganancias, mano_dominante, tipo_reves, puntos, pais, raqueta_id)
VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?);

updateTenista:
